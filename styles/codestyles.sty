\ProvidesPackage{codestyles}

% Language Definitions
\lstdefinelanguage{Pseudocode}{
  morekeywords={FUNCTION, FOR, IF, ELSE, WHILE, RETURN, BREAK, CONTINUE, SET, END}, % Define pseudocode keywords
  sensitive=false,  % Keywords are case insensitive
  morecomment=[l]{//},  % Line comment style
  morestring=[b]"  % String style
}

\lstdefinelanguage{Kotlin}{
  comment=[l]{//},
  emph={filter, first, firstOrNull, forEach, lazy, map, mapNotNull, println},
  keywords={!in, !is, abstract, actual, annotation, as, as?, break, by, catch, class, companion, const, constructor, continue, crossinline, data, delegate, do, dynamic, else, enum, expect, external, false, field, file, final, finally, for, fun, get, if, import, in, infix, init, inline, inner, interface, internal, is, lateinit, noinline, null, object, open, operator, out, override, package, param, private, property, protected, public, receiveris, reified, return, return@, sealed, set, setparam, super, suspend, tailrec, this, throw, true, try, typealias, typeof, val, var, vararg, when, where, while},
  morecomment=[s]{/*}{*/},
  morestring=[b]",
  morestring=[s]{"""*}{*"""},
  ndkeywords={@Deprecated, @JvmField, @JvmName, @JvmOverloads, @JvmStatic, @JvmSynthetic, Array, Byte, Double, Float, Int, Integer, Iterable, Long, Runnable, Short, String, Any, Unit, Nothing},
  sensitive=true
}

