\ProvidesPackage{linkstyles}

% Load the hyperref package
\RequirePackage{hyperref}

% Set hyperlink colors and styles
\hypersetup{
    colorlinks=true,      % Use colored links
    linkcolor=blue,      % Color of internal links
    citecolor=green,     % Color of citations
    urlcolor=red,        % Color of URLs
    linkbordercolor={1 1 1}, % Set link border color to white (invisible)
}

